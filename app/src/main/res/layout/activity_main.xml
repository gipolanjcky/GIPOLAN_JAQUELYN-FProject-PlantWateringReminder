<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Add Plant Section -->
    <EditText
        android:id="@+id/plantNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plant Name" />

    <EditText
        android:id="@+id/wateringIntervalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Watering Interval (in days)" />

    <Button
        android:id="@+id/addPlantButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Plant" />

    <!-- Set Watering Schedule Section -->
    <Button
        android:id="@+id/setWateringScheduleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Watering Schedule" />

    <!-- Reminder Notifications Section -->
    <Button
        android:id="@+id/reminderNotificationsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder Notifications" />

    <!-- Plant Care Tips Section -->
    <Button
        android:id="@+id/plantCareTipsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Care Tips" />

    <!-- Plant Health Tracker Section -->
    <Button
        android:id="@+id/plantHealthTrackerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Health Tracker" />

    <ListView
        android:id="@+id/plantListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
