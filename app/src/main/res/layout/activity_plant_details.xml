<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PlantDetailsActivity">


    <!-- Plant Name -->
    <TextView
        android:id="@+id/plantNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <!-- Watering Interval -->
    <TextView
        android:id="@+id/wateringIntervalTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <!-- Set Watering Schedule Button -->
    <Button
        android:id="@+id/setWateringScheduleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Watering Schedule"
        android:textSize="12sp"
        android:layout_marginTop="40dp"/>

    <!-- Reminder Notifications Button -->
    <Button
        android:id="@+id/reminderNotificationsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"/>

    <!-- Plant Care Tips Button -->
    <Button
        android:id="@+id/plantCareTipsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Care Tips"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"/>

    <!-- Plant Health Tracker Button -->
    <Button
        android:id="@+id/plantHealthTrackerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Health Tracker"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"/>

</LinearLayout>
